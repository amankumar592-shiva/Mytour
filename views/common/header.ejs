    <style>
        /* Modern colorful header */
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --accent: #4895ef;
            --text: #ffffff;
            --hover: #4cc9f0;
        }
        
        * {
            margin: 0;
            padding:0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        
        header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            box-shadow: 0 4px 20px rgba(0,0,0,0.1); 
             position: sticky;
            top: 100;
             z-index: 100;
             
             
        }
        
        .header-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height:18vh;
            
        }
        
        .logo {
            color: var(--text);
            font-size: 1.8rem;
            font-weight: 700;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo span {
            color: var(--hover);
        }
        
        .nav-menu {
            display: flex;
            list-style: none;
            gap: 10px;
            margin-top: 10px;
        }
        
        .nav-item a {
            color: var(--text);
            text-decoration: none;  
            font-weight: 500;
            padding: 8px 15px;
            border-radius: 30px;
            transition: all 0.3s ease;
            position: relative;
        }
        
        /* Hover Effect */
        .nav-item a:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-3px);
        }
        
        /* Active Link */
        .nav-item a.active {
            background: var(--accent);
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.4);
        }
        
        /* Underline animation on hover */
        .nav-item a:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: var(--hover);
            bottom: 0;
            left: 0;
            transition: width 0.3s;
        }
        
        .nav-item a:hover:after {
            width: 100%;
           
        }
        
        /* Mobile Menu */
        .hamburger {
            display: none;
            cursor: pointer;
            color: white;
            font-size: 1.5rem;
        }
        
        @media (max-width: 768px) {
            .hamburger {
                display: block;
            }
            
            .nav-menu {
                position: fixed;
                top: 70px;
                left: -100%;
                width: 100%;
                height: calc(100vh - 70px);
                background: linear-gradient(135deg, var(--primary), var(--secondary));
                flex-direction: column;
                align-items: center;
                padding: 40px;
                gap: 30px;
                transition: left 0.5s ease;
                overflow-y: scroll;
            }
            
            .nav-menu.active {
                left: 0;
            }
            
            .nav-item a {
                font-size: 1.2rem;
                padding: 12px 30px;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
