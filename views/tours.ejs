  .adv-thrill-title {
    font-weight: 800;
    font-size: 2.2rem;
    margin-bottom: 0.75rem;
    position: relative;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
  }
  
  .adv-thrill-subtitle {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    position: relative;
  }
  
  .adv-thrill-desc {
    font-size: 1.1rem;
    opacity: 0.9;
    position: relative;
  }
  
