                        <img src="/<%= religious[j].uploadimage[0] %>" class="card-img-top" alt="<%= religious[j].productname %>">
                        <div class="card-body">
                          <h5 class="card-title" style="font-size: 1rem;"><%= religious[j].productname %></h5>
                          <p class="card-text small mb-1"><strong>Price:</strong> ₹<%= religious[j].price %></p>
                          <p class="card-text small mb-2"><strong>Location:</strong> <%= religious[j].location %></p>
                          <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-dark btn-sm py-1">Buy Now</a>
                            <a href="/viewproduct/<%= religious[j]._id %>" class="btn btn-dark btn-sm py-1">View</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#mobileReligiousCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#mobileReligiousCarousel" data-bs-slide="next">
