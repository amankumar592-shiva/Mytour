 <section class="container-fluid py-5">
  <h2 class="section-title mx-5">Religious Products</h2>

  <!-- Desktop Carousel (3 cards per slide) -->
  <div class="container-fluid mt-4">
    <% if (religious && religious.length > 0) { %>
      <div id="desktopReligiousCarousel" class="carousel slide desktop-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% for (let i = 0; i < religious.length; i += 3) { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <div class="row">
                <% for (let j = i; j < i + 3 && j < religious.length; j++) { %>
                  <div class="col-md-4">
                    <div class="card mb-4">
                      <img src="/<%= religious[j].uploadimage[0] %>" class="card-img-top" alt="<%= religious[j].productname %>">
                      <div class="card-body">
                        <h5 class="card-title"><%= religious[j].productname %></h5>
                        <p class="card-text"><strong>Package:</strong> <%= religious[j].packagedetails %></p>
                        <p class="card-text"><strong>Category:</strong> <%= religious[j].category %></p>
                        <p class="card-text"><strong>Price:</strong> ₹<%= religious[j].price %></p>
                        <p class="card-text"><strong>Duration:</strong> <%= religious[j].duration %></p>
                        <p class="card-text"><strong>Location:</strong> <%= religious[j].location %></p>
                        <a href="#" class="btn btn-dark">Buy Now</a>
                        <a href="/viewproduct/<%= religious[j]._id %>" class="btn btn-dark">View Product</a>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#desktopReligiousCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#desktopReligiousCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Mobile Carousel (2 cards per slide) -->
      <!-- Mobile Carousel (2 cards per slide) - FULL WIDTH -->
      <div class="container-fluid mobile-carousel-container px-0">
        <div id="mobileReligiousCarousel" class="carousel slide mobile-carousel" data-bs-ride="carousel">
          <div class="carousel-inner">
