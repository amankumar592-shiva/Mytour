          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <h5 class="fw-bold mb-3">Why Book With Us?</h5>
              <div class="d-flex mb-3">
                <div class="flex-shrink-0 text-primary me-3">
                  <i class="bi bi-shield-check fs-4"></i>
                </div>
                <div>
                  <h6 class="fw-bold mb-0">Best Price Guarantee</h6>
                  <p class="small text-muted mb-0">We'll match or beat any competitor's price</p>
                </div>
              </div>
              <div class="d-flex mb-3">
                <div class="flex-shrink-0 text-primary me-3">
                  <i class="bi bi-headset fs-4"></i>
                </div>
                <div>
                  <h6 class="fw-bold mb-0">24/7 Customer Support</h6>
                  <p class="small text-muted mb-0">Our team is available round the clock</p>
                </div>
              </div>
              <div class="d-flex">
                <div class="flex-shrink-0 text-primary me-3">
                  <i class="bi bi-arrow-repeat fs-4"></i>
                </div>
                <div>
                  <h6 class="fw-bold mb-0">Flexible Cancellation</h6>
                  <p class="small text-muted mb-0">Free cancellation up to 30 days before</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom Tour Page Styles */
  .tour-container {
    font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
  }
  
  .main-image-container {
    background-color: #f8f9fa;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .thumbnail-img {
    cursor: pointer;
    object-fit: cover;
    transition: all 0.2s ease;
    border: 2px solid transparent !important;
  }
  
  .thumbnail-img:hover {
    border-color: #0d6efd !important;
    transform: scale(1.05);
  }
  
  .active-thumbnail {
    border-color: #0d6efd !important;
  }
  
  .thumbnail-scroller {
    overflow-x: auto;
    padding-bottom: 10px;
  }
  
  .thumbnail-scroller::-webkit-scrollbar {
    height: 5px;
  }
  
  .thumbnail-scroller::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  
  .thumbnail-scroller::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 10px;
  }
  
  .price-section {
    background-color: #f8f9fa;
  }
  
  .nav-tabs .nav-link {
    color: #495057;
    font-weight: 500;
  }
  
  .nav-tabs .nav-link.active {
    color: #0d6efd;
    font-weight: 600;
  }
  
  .day-number {
    flex-shrink: 0;
  }
  
  .itinerary-day {
    padding: 12px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .itinerary-day:hover {
    background-color: rgba(13, 110, 253, 0.05);
  }
  
  @media (max-width: 991.98px) {
    .sticky-top {
      position: relative !important;
    }
  }
</style>

<script>
  // Initialize date picker
  document.addEventListener('DOMContentLoaded', function() {
    // Set minimum date to tomorrow
    const today = new Date();
    const tomorrow = new Date(today);
    tomorrow.setDate(tomorrow.getDate() + 1);
    document.getElementById('departureDate').min = tomorrow.toISOString().split('T')[0];
    
    // Thumbnail image click handler
    const thumbnails = document.querySelectorAll('.thumbnail-img');
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        changeImage(this);
      });
    });
  });
  
  // Change main image when thumbnail clicked
  function changeImage(element) {
    const mainImage = document.getElementById('mainTourImage');
    mainImage.src = element.src;
    
    // Update active thumbnail
    document.querySelectorAll('.thumbnail-img').forEach(img => {
      img.classList.remove('active-thumbnail');
    });
    element.classList.add('active-thumbnail');
  }
  
  // Form validation
  function validateBooking() {
    const date = document.getElementById('departureDate').value;
    if (!date) {
      alert('Please select a departure date');
      return false;
    }
    return true;
  }
</script>

