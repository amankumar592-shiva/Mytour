 <%- include("../views/common/header.ejs") %>

<!-- Main Container -->
<div class="tour-container">
  <!-- Breadcrumb Navigation -->
  <div class="container-fluid bg-light py-2 border-bottom">
    <div class="container">
      <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/tours">Tour Packages</a></li>
          <li class="breadcrumb-item"><a href="#">Asia</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= product.packagedetails %></li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Product Section -->
  <div class="container my-4">
    <div class="row gx-5">
      <!-- Image Gallery -->
      <div class="col-lg-7">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body p-3">
            <div class="main-image-container ratio ratio-16x9 bg-light rounded mb-3">
              <img src="/<%= product.uploadimage[0] %>" class="img-fluid w-100 object-fit-cover rounded" id="mainTourImage" alt="<%= product.packagedetails %>">
            </div>
            <div class="thumbnail-scroller">
              <div class="d-flex gap-2">
                <img src="/<%= product.uploadimage[0] %>" class="thumbnail-img active-thumbnail rounded border" width="80" height="60" onclick="changeImage(this)">
                <!-- Add more thumbnails here -->
                <img src="/<%= product.uploadimage[1] %> " class="thumbnail-img rounded border" width="80" height="60" onclick="changeImage(this)">
                <img src="/<%= product.uploadimage[2] %>" class="thumbnail-img rounded border" width="80" height="60" onclick="changeImage(this)">
              </div>
            </div>
          </div>
        </div>

        <!-- Product Details Tabs -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body p-4">
            <ul class="nav nav-tabs mb-4" id="tourTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Description</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="itinerary-tab" data-bs-toggle="tab" data-bs-target="#itinerary" type="button" role="tab">Itinerary</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="inclusions-tab" data-bs-toggle="tab" data-bs-target="#inclusions" type="button" role="tab">Inclusions</button>
              </li>
            </ul>
            <div class="tab-content" id="tourTabsContent">
              <div class="tab-pane fade show active" id="description" role="tabpanel">
                <h4 class="fw-bold mb-3">About This Tour</h4>
                <p>Experience the ultimate Bali adventure with our carefully curated 5-day tour package. From stunning beaches to cultural landmarks, this package offers the perfect blend of relaxation and exploration.</p>
                <div class="row mt-4">
                  <div class="col-md-6">
                    <div class="d-flex mb-3">
                      <div class="flex-shrink-0 text-primary me-3">
                        <i class="bi bi-geo-alt fs-4"></i>
                      </div>
                      <div>
                        <h5 class="fw-bold">Destinations</h5>
                        <p class="mb-0">Bali, Ubud, Kuta, Seminyak</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="d-flex mb-3">
                      <div class="flex-shrink-0 text-primary me-3">
                        <i class="bi bi-building fs-4"></i>
                      </div>
                      <div>
                        <h5 class="fw-bold">Accommodation</h5>
                        <p class="mb-0">4-star hotels (4 nights)</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="itinerary" role="tabpanel">
                <h4 class="fw-bold mb-3">Detailed Itinerary</h4>
                <div class="itinerary-day">
                  <div class="d-flex mb-4">
                    <div class="day-number bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">1</div>
                    <div>
                      <h5 class="fw-bold">Arrival in Bali</h5>
                      <p class="mb-0">Arrive at Ngurah Rai International Airport, meet our representative and transfer to your hotel. Rest of the day at leisure.</p>
                    </div>
                  </div>
                  <!-- More itinerary days here -->
                </div>
              </div>
              <div class="tab-pane fade" id="inclusions" role="tabpanel">
                <h4 class="fw-bold mb-3">What's Included</h4>
                <div class="row">
                  <div class="col-md-6">
                    <div class="d-flex mb-3">
                      <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                      <span>4 Nights Accommodation</span>
                    </div>
                    <div class="d-flex mb-3">
                      <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                      <span>Daily Breakfast</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="d-flex mb-3">
                      <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                      <span>Airport Transfers</span>
                    </div>
                    <div class="d-flex mb-3">
                      <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                      <span>Guided Tours</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Booking Sidebar -->
      <div class="col-lg-5">
        <div class="sticky-top" style="top: 20px;">
          <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
              <h2 class="fw-bold mb-3"><%= product.packagedetails %></h2>
              
              <div class="d-flex align-items-center mb-3">
                <div class="rating me-3">
