        // Countdown timer
        function updateCountdown() {
            let hours = 3;
            let minutes = 12;
            let seconds = 55;
            
            const countdown = setInterval(() => {
                seconds--;
                
                if (seconds < 0) {
                    seconds = 59;
                    minutes--;
                }
                
                if (minutes < 0) {
                    minutes = 59;
                    hours--;
                }
                
                if (hours < 0) {
                    clearInterval(countdown);
                    document.getElementById('deal-countdown').textContent = "DEAL EXPIRED!";
                    return;
                }
                
                const formattedTime = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                document.getElementById('deal-countdown').textContent = formattedTime;
            }, 1000);
        }
        
        // Stock simulation
