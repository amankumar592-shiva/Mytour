                    stock--;
                    stockElement.textContent = stock;
                    
                    // Update sticky header
                    const stickyStock = document.querySelector('.sticky-top-bar .badge');
                    if (stickyStock) {
                        stickyStock.textContent = `${stock} Seats Left`;
                    }
                    
                    // Trigger urgency if low stock
                    if (stock < 5) {
                        stockElement.parentElement.classList.add('animate__animated', 'animate__pulse', 'animate__infinite');
                    }
                }
            }, 15000);
        }
        
