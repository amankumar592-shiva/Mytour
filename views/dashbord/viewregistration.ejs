
 <!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- DataTables Bootstrap 5 CSS -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />



 <div class="col-12"><%- include('./header.ejs') %> </div>

<div class="container-fluid mt-4 p-0">
    <div class="d-flex">
      <div class="col-3  text-dark p-3">
        <%- include('./sidebar.ejs') %>
      </div>
      <div class="col-9  p-3" style="overflow-Y: scroll; height: 600px; overflow-x: auto; white-space: nowrap;">
        
        <div class="container-fluid mt-3 bg-light">
        <h2> VIEW REGISTERED PEOPLE</h2>
  
     <%  if(regdata.length>0){ %> 

        <table class="table-bordered table" id="mytable"> 
        <thead> 
   <tr> 
     <th>First Name</th>
     <th>Last Name</th>
     <th>Username</th>
     <th>Email</th>
     <th>Phone</th>
     <th>Password</th>
     <th>DOB</th>
     <th>Gender</th>
     <th>Edit</th>
     <th>Delete</th>
     </tr>
        </thead>

        <tbody>
       <% for (var i=0; i< regdata.length; i++) { %> 
        <tr>
      <td><%= regdata[i].firstname %></td>
      <td><%= regdata[i].lastname %></td>
      <td><%= regdata[i].username %></td>
      <td><%= regdata[i].email %></td>
      <td><%= regdata[i].phone %></td>
      <td><%= regdata[i].password %></td>
      <td><%= regdata[i].dob %></td>
      <td><%= regdata[i].gender %></td>
      <td><a href="/edit/<%= regdata[i]._id%>">Edit</a>&nbsp;</td>
      <td><a href="/delete_2/<%= regdata[i]._id%>">delete</a></td>
      </tr>
      <%} %>
       </tbody>
       </table>

        <%} else {%>  
        
         <p> no record found</p>
         <%} %> 
       
        </div>
        </div>
        </div>   
    

      </div>
    </div>
  </div> 





   <!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<!-- DataTable Initialization -->
<script>
  $(document).ready(function () {
    $('#mytable').DataTable();
  });
</script>
