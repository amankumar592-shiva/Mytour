 <div class="col-12"><%- include('./header.ejs') %> </div>

<!-- Page Layout -->

  <div class="d-flex">
    <!-- Sidebar (optional if you use it) -->
    <div class="col-3 text-dark p-3">
      <%- include('./sidebar.ejs') %>
    </div>

    <!-- Main Content -->
    <div class="col-9 p-3" style="overflow-y: scroll; height: 800px;">
      <div class="container-fluid mt-3 bg-light">
        <h2>VIEW Deals</h2>

        <% if (dealdata.length > 0) { %>
          <table class="table-bordered table" id="table">
            <thead>
              <tr>
      <th>name</th>
     <th>email</th>
     <th>phone</th>
     <th>city</th>
     <th>adults</th>
     <th>children</th>
     <th>travelDate</th>
     <th>idProof</th>
     <th>healthCert</th>
     <th>agreeTerms</th>
     <th>Edit</th>
     <th>Delete</th>
            </tr>
            </thead>
            <tbody>

   <% for (var i = 0; i < dealdata.length; i++) { %>
                <tr>
                 <td><%= dealdata[i].name %></td>
      <td><%= dealdata[i].email %></td>
      <td><%= dealdata[i].phone %></td>
      <td><%= dealdata[i].city %></td>
      <td><%= dealdata[i].adults %></td>
      <td><%= dealdata[i].children %></td>
      <td><%= dealdata[i].travelDate %></td>


     <td><img src="/<%= dealdata[i].idProof %>" width="80" /></td> 
     <td><img src="/<%= dealdata[i].healthCert %>" width="80" /></td> 

  

      <td><%= dealdata[i].agreeTerms %></td>
      <td><a href="/edit555/<%= dealdata[i].id%>">Edit</a>&nbsp;</td>
      <td><a href="/delete555/<%= dealdata[i].id%>">delete</a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        <% } else { %>
          <p>No record found</p>
        <% } %>
      </div>
    </div>
  </div>
